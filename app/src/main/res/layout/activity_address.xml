<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddressActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:background="#292926">
        <Button
            android:id="@+id/menu_id_address"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/menu1"
            android:clickable="true"
            android:paddingTop="20dp"
            android:layout_alignParentLeft="true"
            android:focusable="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/title"
            android:contentDescription="@string/todo" />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Your FALL NAME ....."
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="35sp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="20dp">
            </TextView>
            <EditText
                android:id="@+id/name_text_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="30dp"
                android:hint="Your Name "
                android:layout_marginBottom="30dp"
                android:paddingLeft="10dp"></EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Your ADDRESS ....."
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="35sp"
        android:paddingLeft="10dp"
        android:layout_marginBottom="20dp">
    </TextView>
    <EditText
        android:id="@+id/address_text_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="30dp"
        android:hint="Street_City_Country "
        android:layout_marginBottom="30dp"
        android:paddingLeft="10dp"></EditText>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Your PHONE NUMBER ....."
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="35sp"
        android:paddingLeft="10dp"
        android:layout_marginBottom="20dp">
    </TextView>
    <EditText
        android:id="@+id/phone_text_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="30dp"
        android:hint="Phone Number "
        android:inputType="phone"
        android:digits="0123456789"
        android:maxLength="11"
        android:layout_marginBottom="30dp"
        android:paddingLeft="10dp"></EditText>
    <Button
        android:id="@+id/send_request_id"
        android:padding="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="#d5b347"
        android:text="SEND YOUR REQUEST"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginBottom="35sp"></Button>
        </LinearLayout>
    </ScrollView>

</LinearLayout>